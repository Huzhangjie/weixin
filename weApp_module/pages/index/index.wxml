
<view class="swiper-tab">
  <view class="swiper-tab-item {{currentIndex==0?'active':''}}" data-current="0" bindtap="clicktap">全部</view>
  <view class="swiper-tab-item {{currentIndex==1?'active':''}}" data-current="1" bindtap="clicktap">提现中</view>
  <view class="swiper-tab-item {{currentIndex==2?'active':''}}" data-current="2" bindtap="clicktap">已提现</view>
</view>
<!-- swiper 组件 -->
<!-- 不是贫穷的html 标签可以做的 -->
<swiper current='{{currentIndex}}' bindchange="swiperTab" duration="300">
  <swiper-item>
    <view>全部</view>
  </swiper-item>
  <swiper-item>
    <view>提现中</view>
  </swiper-item>
  <swiper-item>
    <view>已提现</view>
  </swiper-item>
</swiper>