/* pages/scroll/scroll.wxss */
.item-style {
    padding: 30rpx;
    font-size: 40rpx;
    border-top: 2rpx solid #eee;
    position: relative;
}

/* 使用伪元素模拟大于号 定位到右边 设置边框变成的正方形 
    将左和下边透明 再旋转45度 */
.item-style:after {
    content: "";
    position: absolute;
    width: 16rpx;
    height: 16rpx;
    border: 1px solid #333;
    border-bottom-color: transparent;
    border-left-color: transparent;
    right: 30rpx;
    top: 50rpx;
    transform: rotate(45deg);
}

.refresh-block {
    padding: 30rpx;
    text-align: center;
}

.refresh-block image {
    width: 60rpx;
    height: 60rpx;
}
