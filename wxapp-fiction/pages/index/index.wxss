/**index.wxss**/

.page__hd {
    width: 100%;
    height: 80rpx;
    background-color: #ffffff;
    position: fixed;
    left: 0;
    top: 0;
}
.bookshelf {
    align-content: center;
    text-align: center;
}

.page__bd {
    margin-top: 0rpx;
    padding: 0;
    display: flex;
    flex-direction: column;
}
.bd_row_books {
    flex: 1;
    display: flex;
    flex-direction: row;
    margin: 0 30rpx;
}
.bd_book-item {
    flex: 1;
    margin-left: 30rpx;
}
.bd_book-item:nth-child(1) {
    margin-left: 0;
}
.bd_book-cover {
    width: 18vh;
}
image {
    height: 200rpx;
}
