 .page__bd_tab:before {
    content: ''; 
    position: absolute;
    right: 0;
    left: 0;
    bottom: 0;
    height: 1px;
    border-bottom: 1px solid #888888;
    transform: scaleY(.2);
} 
.bd_swiper-tab-item {
    flex: 1;
    height: 50rpx;
    color: #888888;
    align-content: center;
    text-align: center;
    font-size: 35rpx;
}
.bd_swiper-tab-item.active {
    color: #eb6661;
}
.bd_swiper-tab-item.active:after {
    content: '';
    display: inline-block;
    width: 10%; 
    border-bottom: 2px solid #eb6661;
    -webkit-transform: translate(-45rpx,17.5rpx);
