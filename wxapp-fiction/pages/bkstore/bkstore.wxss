
.page-mine {
    width: 100%;
    height: 700px;
    background-color: rgba(0,0,0,.6);
    z-index: 999;
    position: fixed;
}

.page__hd {
    width: 100%;
    height: 8vh;
    background-color: greenyellow
    
}
.page__hd-fixed {
    height: 8vh;
    width: 100%;
    display: flex;
    background-color: white;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
}
.page__hd_mine {
    margin: auto 18rpx;
    height: 6vh;
    width: 6vh;
    border-radius: 3vh;
}
.page__hd_mine image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.page__hd_tab {
    width: 50%;
    margin: auto;
    background-color: #f2f2f2;
    display: flex;
    border-radius: 4vh;
    /* transform: translateX(-3vh); */
}
.hd_swiper-tab-item {
    margin: 5rpx;
    flex: 1;
    color: #5e5e5e;
    text-align: center;
    border-radius: 40rpx;
}
.hd_swiper-tab-item.active {
    background-color: white;
    color: #000000;
}
.page__hd_search {
    margin: auto 18rpx;
    height: 6vh;
    width: 6vh;
    background-color: pink;
}
.page__hd_search image {
    width: 100%;
    height: 100%;
}
